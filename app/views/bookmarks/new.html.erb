<div class="container-fluid" style="padding: 0px;">
  <div class="top-bar-dark">
    <%= image_tag "rails-red.png", id: "rails-logo" %>
    <%= link_to "https://www.themoviedb.org/" do %>
      <%= image_tag "tmdb-black.png", id: "tmdb-logo" %>
    <% end %>
  </div>

  <div class="poster-banner", style="background-image: url('<%= asset_path('poster.jpg') %>');">
    <div class="transp-frame">
      <div class="row justify-content-center">
        <div class="col-12 col-lg-8 add-form">
          <h3>Add a film to your <%= @list.name %> list</h3>
          <%= simple_form_for [ @list, @bookmark ] do |f| %>
            <%= f.input :comment %>
            <%= f.association :movie, collection: Movie.all.order(:title), prompt: "Select a movie" %>
            <%= f.submit "Add film", class: "btn-add", style: "border:none;  margin-top:79px;" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="bottom-bar-dark">
    <%= link_to "Back to My Watch Lists", lists_path, class: "btn-back" %>
  </div>
</div>
